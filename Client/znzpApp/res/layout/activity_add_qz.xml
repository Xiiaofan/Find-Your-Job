<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bgimage"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="30dip"
        android:background="@drawable/background_div"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            style="@style/title"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="I'm job hunting"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView2"
            style="@style/normalText"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="title:" />

        <EditText
            android:id="@+id/biaotitxt"
            style="@style/normalText"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:hint="enter..."
            android:inputType="textPersonName"
            android:padding="5dip"
            android:singleLine="true"
            android:textSize="15sp" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <Spinner
            android:id="@+id/hy"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:entries="@array/hy"
            android:gravity="center"
            android:spinnerMode="dropdown" />

    </LinearLayout>

     <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView71"
            style="@style/normalText"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="salary expectation:" />

        <EditText
            android:id="@+id/xinchoutxt"
            style="@style/normalText"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:hint="enter..."
            android:inputType="textPersonName"
            android:padding="5dip"
            android:singleLine="true"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout81"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView7"
            style="@style/normalText"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="CV :" />

        <EditText
            android:id="@+id/shuomingtxt"
            style="@style/normalText"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:gravity="top|left"
            android:hint="enter..."
            android:inputType="textPersonName"
            android:padding="5dip"
            android:singleLine="false"
            android:textSize="15sp" />

    </LinearLayout>

   

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <Button
            android:id="@+id/fabubtn"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:background="@drawable/green_btn_out"
            android:text="post"
            android:textColor="#ffffff"
            android:textSize="13dp" />
    </LinearLayout>

</LinearLayout>